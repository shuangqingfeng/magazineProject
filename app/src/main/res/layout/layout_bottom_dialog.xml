<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal">
        <ImageView android:id="@+id/iv_camera"
                   style="@style/style_avatar_bottomDialog"
                   android:src="@mipmap/ic_dialog_camera"/>
        <ImageView android:id="@+id/iv_photo"
                   style="@style/style_avatar_bottomDialog"
                   android:src="@mipmap/ic_dialog_photo"/>
        <ImageView android:id="@+id/iv_more"
                   style="@style/style_avatar_bottomDialog"
                   android:src="@mipmap/ic_dialog_more"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_close"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="50dp"
               android:src="@mipmap/icon_dialog_close"/>
</LinearLayout>